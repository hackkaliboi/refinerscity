---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
  <main>
    <!-- Hero Section -->
    <section class="bg-primary-800 text-white py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl font-bold mb-4">Contact Us</h1>
        <p class="text-xl text-primary-200">We'd love to hear from you</p>
      </div>
    </section>

    <!-- Contact Information and Form -->
    <section class="py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Information -->
          <div>
            <h2 class="text-2xl font-bold text-primary-800 mb-6">Get in Touch</h2>
            <div class="space-y-6">
              <div>
                <h3 class="text-lg font-semibold text-primary-800 mb-2">Address</h3>
                <p class="text-primary-700">
                  123 Church Street<br />
                  City, State 12345
                </p>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-primary-800 mb-2">Phone</h3>
                <p class="text-primary-700">(555) 123-4567</p>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-primary-800 mb-2">Email</h3>
                <p class="text-primary-700">info@refinerscity.org</p>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-primary-800 mb-2">Office Hours</h3>
                <p class="text-primary-700">
                  Monday - Friday: 9:00 AM - 5:00 PM<br />
                  Saturday: Closed<br />
                  Sunday: 8:00 AM - 1:00 PM
                </p>
              </div>
            </div>

            <!-- Social Media Links -->
            <div class="mt-8">
              <h3 class="text-lg font-semibold text-primary-800 mb-4">Connect With Us</h3>
              <div class="flex space-x-4">
                <a href="#" class="text-primary-600 hover:text-primary-800 transition-all duration-300">
                  <span class="sr-only">Facebook</span>
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                  </svg>
                </a>
                <a href="#" class="text-primary-600 hover:text-primary-800 transition-all duration-300">
                  <span class="sr-only">Instagram</span>
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
                  </svg>
                </a>
                <a href="#" class="text-primary-600 hover:text-primary-800 transition-all duration-300">
                  <span class="sr-only">YouTube</span>
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M19.812 5.418c.861.23 1.538.907 1.768 1.768C21.998 8.746 22 12 22 12s0 3.255-.418 4.814a2.504 2.504 0 0 1-1.768 1.768c-1.56.419-7.814.419-7.814.419s-6.255 0-7.814-.419a2.505 2.505 0 0 1-1.768-1.768C2 15.255 2 12 2 12s0-3.255.417-4.814a2.507 2.507 0 0 1 1.768-1.768C5.744 5 11.998 5 11.998 5s6.255 0 7.814.418ZM15.194 12 10 15V9l5.194 3Z" clip-rule="evenodd" />
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div>
            <h2 class="text-2xl font-bold text-primary-800 mb-6">Send Us a Message</h2>
            <form class="space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium text-primary-700">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 transition-all duration-300"
                  required
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-primary-700">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 transition-all duration-300"
                  required
                />
              </div>
              <div>
                <label for="subject" class="block text-sm font-medium text-primary-700">Subject</label>
                <select
                  id="subject"
                  name="subject"
                  class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 transition-all duration-300"
                >
                  <option>General Inquiry</option>
                  <option>Prayer Request</option>
                  <option>Volunteering</option>
                  <option>Other</option>
                </select>
              </div>
              <div>
                <label for="message" class="block text-sm font-medium text-primary-700">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 transition-all duration-300"
                  required
                ></textarea>
              </div>
              <div>
                <button
                  type="submit"
                  class="w-full bg-primary-600 text-white px-6 py-3 rounded-md font-semibold hover:bg-primary-700 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 shadow-md hover:shadow-lg"
                >
                  Send Message
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class="py-16 bg-primary-50">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-primary-800 mb-6 text-center">Find Us</h2>
        <div class="bg-white p-4 rounded-lg shadow-md aspect-w-16 aspect-h-9">
          <div class="w-full h-full bg-primary-100 rounded flex items-center justify-center">
            <p class="text-primary-600">Map will be embedded here</p>
           </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
