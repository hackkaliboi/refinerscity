---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Admin Dashboard - Refiners City Church" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="description" content={description} />
    <title>{title} | Admin - Refiners City Church</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-gray-50">
    <div class="flex h-screen overflow-hidden">
      <!-- Sidebar -->
      <aside class="hidden md:flex md:flex-shrink-0">
        <div class="flex flex-col w-64 bg-primary-800">
          <!-- Logo -->
          <div class="flex items-center justify-center h-16 px-4 bg-primary-900">
            <h1 class="text-xl font-bold text-white">RCC Admin</h1>
          </div>

          <!-- Navigation -->
          <nav class="flex-1 px-4 py-6 space-y-2 overflow-y-auto">
            <a
              href="/admin"
              class:list={[
                "flex items-center px-4 py-3 rounded-lg transition-all",
                currentPath === '/admin' 
                  ? "bg-primary-700 text-white" 
                  : "text-primary-100 hover:bg-primary-700 hover:text-white"
              ]}
            >
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Dashboard
            </a>

            <a
              href="/cms-x9k2p/sermons"
              class:list={[
                "flex items-center px-4 py-3 rounded-lg transition-all",
                currentPath.startsWith('/cms-x9k2p/sermons') 
                  ? "bg-primary-700 text-white" 
                  : "text-primary-100 hover:bg-primary-700 hover:text-white"
              ]}
            >
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
              Sermons
            </a>

            <a
              href="/cms-x9k2p/events"
              class:list={[
                "flex items-center px-4 py-3 rounded-lg transition-all",
                currentPath.startsWith('/cms-x9k2p/events') 
                  ? "bg-primary-700 text-white" 
                  : "text-primary-100 hover:bg-primary-700 hover:text-white"
              ]}
            >
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              Events
            </a>

            <a
              href="/cms-x9k2p/ministries"
              class:list={[
                "flex items-center px-4 py-3 rounded-lg transition-all",
                currentPath.startsWith('/cms-x9k2p/ministries') 
                  ? "bg-primary-700 text-white" 
                  : "text-primary-100 hover:bg-primary-700 hover:text-white"
              ]}
            >
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              Ministries
            </a>

            <a
              href="/media"
              class:list={[
                "flex items-center px-4 py-3 rounded-lg transition-all",
                currentPath === '/media' 
                  ? "bg-primary-700 text-white" 
                  : "text-primary-100 hover:bg-primary-700 hover:text-white"
              ]}
            >
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              Media Gallery
            </a>

            <div class="pt-6 mt-6 border-t border-primary-700">
              <a
                href="/"
                target="_blank"
                class="flex items-center px-4 py-3 text-primary-100 rounded-lg hover:bg-primary-700 hover:text-white transition-all"
              >
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                View Website
              </a>
            </div>
          </nav>
        </div>
      </aside>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Top Bar -->
        <header class="bg-white shadow-sm z-10">
          <div class="flex items-center justify-between px-6 py-4">
            <!-- Mobile menu button -->
            <button
              id="mobile-menu-button"
              class="md:hidden p-2 rounded-md text-primary-600 hover:bg-primary-50"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>

            <h2 class="text-2xl font-bold text-primary-800">{title}</h2>

            <!-- Logout Button -->
            <form action="/cms-x9k2p/logout" method="POST">
              <button
                type="submit"
                class="flex items-center px-4 py-2 text-sm font-medium text-primary-700 bg-primary-50 rounded-lg hover:bg-primary-100 transition-all"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                Logout
              </button>
            </form>
          </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 overflow-y-auto bg-gray-50 p-6">
          <slot />
        </main>
      </div>
    </div>

    <!-- Mobile Sidebar Overlay -->
    <div id="mobile-sidebar" class="hidden fixed inset-0 z-50 md:hidden">
      <div class="absolute inset-0 bg-gray-600 opacity-75" id="mobile-sidebar-overlay"></div>
      <div class="relative flex flex-col w-64 h-full bg-primary-800">
        <!-- Mobile sidebar content (same as desktop) -->
      </div>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --font-family: 'Inter', system-ui, -apple-system, sans-serif;
  }

  html {
    font-family: var(--font-family);
  }

  /* Smooth transitions */
  * {
    transition-property: background-color, border-color, color, fill, stroke;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }
</style>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileSidebar = document.getElementById('mobile-sidebar');
  const overlay = document.getElementById('mobile-sidebar-overlay');

  menuButton?.addEventListener('click', () => {
    mobileSidebar?.classList.toggle('hidden');
  });

  overlay?.addEventListener('click', () => {
    mobileSidebar?.classList.add('hidden');
  });
</script>
