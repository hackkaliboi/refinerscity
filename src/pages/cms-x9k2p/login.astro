---
import { signIn, setAuthCookies } from '../../lib/auth';

const errors: string[] = [];
let email = '';
let password = '';

// Handle form submission
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    email = formData.get('email')?.toString() || '';
    password = formData.get('password')?.toString() || '';

    if (!email || !password) {
      errors.push('Email and password are required');
    } else {
      const { user, session, error } = await signIn(email, password);

      if (error) {
        errors.push(error.message);
      } else if (session) {
        // Set auth cookies
        setAuthCookies(Astro, session);
        
        // Redirect to admin dashboard
        return Astro.redirect('/admin');
      }
    }
  } catch (error) {
    errors.push('An unexpected error occurred. Please try again.');
  }
}

// Check for error in URL params
const urlError = Astro.url.searchParams.get('error');
if (urlError === 'unauthorized') {
  errors.push('You do not have admin access');
} else if (urlError === 'session_expired') {
  errors.push('Your session has expired. Please login again.');
}
